<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.drewgottlieb.soapy" >

    <service android:name=".app.ArduinoService" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".IdleActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:stateNotNeeded="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="androiintent.category.HOME" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlaylistListActivity"
            android:label="@string/title_playlist_list" >
        </activity>
        <activity
            android:name=".PlaylistDetailActivity"
            android:label="@string/title_playlist_detail"
            android:parentActivityName=".PlaylistListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.drewgottlieb.soapy.PlaylistListActivity" />
        </activity>
        <activity
            android:name=".PlaylistSelectionActivity"
            android:label="@string/title_activity_playlist_selection" >
        </activity>

        <service
            android:name=".ArduinoService"
            android:enabled="true"
            android:exported="false" >
        </service>
        <service
            android:name=".SpotifyService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
