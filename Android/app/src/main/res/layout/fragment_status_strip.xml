<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.drewgottlieb.soapy.StatusStrip"
    android:background="@color/STATUS_STRIP_BG"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Monday    7:39 am"
        android:id="@+id/status_strip_time_text"
        android:textSize="32sp"
        android:textColor="#ff707070"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="CANCEL"
            android:background="@color/CANCEL_BG"
            android:textColor="@color/CANCEL_FG"
            android:textSize="25sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:soundEffectsEnabled="false"
            />
        </LinearLayout>
</FrameLayout>
