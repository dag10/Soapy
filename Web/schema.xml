<?xml version="1.0" encoding="UTF-8"?>
<database name="soapy" defaultIdMethod="native">
  <table name="user">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
    <column name="ldap" type="varchar" size="128" required="true" />
    <column name="firstname" type="longvarchar" required="true" />
    <column name="lastname" type="longvarchar" required="true" />
  </table>
  <table name="spotifyaccount" phpName="SpotifyAccount">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
    <column name="user_id" type="integer" required="true" />
    <foreign-key foreignTable="user">
      <reference local="user_id" foreign="id" />
    </foreign-key>
    <column name="username" type="varchar" size="128" required="true" />
    <column name="accesstoken" type="longvarchar" required="true" />
    <column name="refreshtoken" type="longvarchar" required="true" />
    <column name="expiration" type="date" required="true" />
  </table>
</database>

